<h4>Post details:</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	Added at <%= @row['created_date'] %>
</p>
<br />
<h4>Comments:</h4>
<p>
	<form action="/details/<%= @row['id'] %>" method="POST">
		<textarea name="content" style="width: 900px" placeholder="Type comment text here" class="form-control" rows="5"></textarea>
		<br />
		<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>
